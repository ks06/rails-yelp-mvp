<div class="container">
  <div class="row justify-content-around">
    <div class="col-6">
      <%= simple_form_for(@restaurant) do |f|  %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
        <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
