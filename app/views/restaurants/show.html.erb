<h2><%= @restaurant.name %></h2>
<br>
<p><strong>Address</strong>: <%= @restaurant.address %></p>
<p><strong>Category</strong>: <%= @restaurant.category.capitalize %></p>
<p><strong>Phone number</strong>: <%= @restaurant.phone_number %></p>
<br>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>-<%= review.rating %></li>
  <% end %>
</ul>

<div class="container">
  <div class="row justify-content-around">
    <div class="col-6">
      <%= simple_form_for [ @restaurant, @review ] do |f|  %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back to list', restaurants_path %>


